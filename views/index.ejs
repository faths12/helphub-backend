<!DOCTYPE html>
<html>
  <head>
    <title>Login Page</title>
    <style>
      body {
        background: linear-gradient(to bottom, #2c3268, #a9249a);
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
        margin: 0;
        padding: 0;
        position: relative;
        font-family: impact, sans-serif;
      }
      p {
        font-size: 52px;
        color: #ffffff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        margin-top: 20px;
        text-align: center;

        width: 100%;
      }
      pp {
        font-size: 32px;
        color: #ffffff;
        text-shadow: 1px 1px 2px rgba(0, 0, 0, 0.5);
        margin-top: 20px;
        text-align: center;

        width: 100%;
      }

      nav {
        position: absolute;
        top: 20px;
        right: 20px;
      }

      nav ul {
        list-style: none;
        margin: 0;
        padding: 0;
      }

      nav li {
        display: inline-block;
        margin: 0 10px;
      }

      nav a {
        text-decoration: none;

        background-color: #fff;
        color: #000000;
        padding: 5px 10px;
        border-radius: 5px;
        border: 1px solid #cccccc00;
        transition: background-color 0.9s;
      }

      nav a:hover {
        color: #ffffff;
        background-color: #000000;
      }
      .logg img {
        height: 270px;
        width: 270px;
        margin-top: 20px;
        padding: 10px;
        margin-bottom: 100px;
        margin-right: -250px;
      }
    </style>
  </head>

  <body>
    <img src="D:\img.png" alt="Example Image" width="650" height="650" />
    <div class="logg">
      <img src="D:\logg.png" alt="Example Image" />
    </div>
    <header>
      <nav>
        <ul>
          <li><a href="/application">Apply As Volunteer</a></li>
          <li><a id="ActionButton" href="#""></a></li>
        </ul>
      </nav>
    </header>

    <main>
      <div class="p">
        <p>HELPHUB</p>
      </div>
      <div class="pp">
        <pp>A one-step solution for all your needs.</pp>
      </div>
    </main>
    <script>
      const loggedIn = "<%= loggedIn %>";
      const ActionButton = document.querySelector("#ActionButton");
      if (loggedIn == "false") {
        ActionButton.innerHTML = "Log In";
        ActionButton.href = "/login";
      } else {
        let display_name = "<%= display_name %>";
        ActionButton.innerHTML = `${display_name}`;
        ActionButton.href = "#";
      }
    </script>
  </body>
</html>
